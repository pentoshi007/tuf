#!/bin/bash

# Quick C++ compile and run script
# Usage: ./clang filename.cpp or ./clang filename

if [ $# -eq 0 ]; then
    echo "âŒ Usage: ./clang <filename>"
    echo "ğŸ“ Examples: ./clang setup.cpp  or  ./clang setup"
    exit 1
fi

FILE="$1"
[[ ! "$FILE" =~ \.cpp$ ]] && FILE="${FILE}.cpp"

if [ ! -f "$FILE" ]; then
    echo "âŒ File '$FILE' not found!"
    exit 1
fi

BASE_NAME=$(basename "$FILE" .cpp)
echo "ğŸš€ Compiling $FILE..."
clang++ -std=c++20 -O2 -Wall "$FILE" -o "$BASE_NAME" && echo "âœ… Done! Running..." && echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€" && ./"$BASE_NAME"

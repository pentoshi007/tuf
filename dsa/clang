#!/bin/bash

# Quick C++ compile and run script
# Usage: ./clang filename.cpp
# Alternative: ./clang filename (without .cpp extension)

if [ $# -eq 0 ]; then
    echo "âŒ Usage: ./clang <filename.cpp> or ./clang <filename>"
    echo "ğŸ“ Examples:"
    echo "   ./clang setup.cpp"
    echo "   ./clang setup"
    exit 1
fi

# Get the filename
FILE="$1"

# Add .cpp extension if not provided
if [[ ! "$FILE" =~ \.cpp$ ]]; then
    FILE="${FILE}.cpp"
fi

# Check if file exists
if [ ! -f "$FILE" ]; then
    echo "âŒ File '$FILE' not found!"
    exit 1
fi

# Get filename without extension for output
BASE_NAME=$(basename "$FILE" .cpp)

echo "ğŸš€ Compiling $FILE with Clang C++20..."

# Compile with optimized flags
clang++ -std=c++20 -O2 -Wall "$FILE" -o "$BASE_NAME"

if [ $? -eq 0 ]; then
    echo "âœ… Compilation successful!"
    echo "ğŸ”„ Running $BASE_NAME..."
    echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
    ./"$BASE_NAME"
else
    echo "âŒ Compilation failed!"
    exit 1
fi
